<section class="about_us py_9 pb-0">
  <div class="container">
    <div class="row g-0 align-items-center">
      <div
        class="col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-4 mb-xl-0"
      >
        <div class="about_us_img">
          <img
            class="lazyload"
            src="{{ section.settings.about_img| img_url: 'master' }}"
            alt="{{ section.settings.about_img }}"
            width="525"
            height="585"
            loading="lazy"
          >
        </div>
      </div>
      <div
        class="col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-4 mb-xl-0"
      >
        <div class="about_us_cntnt">
          <!-- <h5>{{ section.settings.title}}</h5> -->
          <h2>{{ section.settings.sub_title }}</h2>

          {{ section.settings.description }}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Why Choose Lumerid",
  "settings": [

     {
      "type": "image_picker",
      "id": "about_img",
      "label":"Add Image"
    },
      {
      "type": "text",
      "id": "title",
      "label":"Heading"
    },
   {
      "type": "text",
      "id": "sub_title",
      "label":"Sub Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label":"Description"
    }


  ],
    "presets": [
     {
     "name": "Why Choose Lumerid"
     }
   ]
}
{% endschema %}

