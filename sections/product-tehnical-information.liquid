</div> -->


{% schema %}
{
    "name": "Product tehnical info",
    "class": "product-technical-info--container",
    "settings": [
        {
            "type": "range",
            "id": "top_spacing",
            "min": 0,
            "max": 50,
            "step": 10,
            "unit": "px",
            "label": "Section top spacing",
            "default": 20
        },
        {
            "type": "range",
            "id": "bottom_spacing",
            "min": 0,
            "max": 50,
            "step": 10,
            "unit": "px",
            "label": "Section bottom spacing",
            "default": 20
        },
        {
            "type": "text",
            "id": "first_title",
            "label": "First title",
            "default": "How it works:"
        },
        {
            "type": "richtext",
            "id": "first_content",
            "label": "How it works"
        },
        {
            "type": "text",
            "id": "second_title",
            "label": "Second title",
            "default": "Benefits:"
        },
        {
            "type": "richtext",
            "id": "second_content",
            "label": "Benefits content"
        },
        {
            "type": "text",
            "id": "third_title",
            "label": "Third title",
            "default": "Tehnicals Details"
        },
        {
            "type": "richtext",
            "id": "third_content",
            "label": "Tehnicals content"
        },
        {
            "type": "text",
            "id": "first_subtitle",
            "label": "First subtitle",
            "default": "Specifications"
        },
        {
            "type": "richtext",
            "id": "specifications",
            "label": "Specifications content"
        },
        {
            "type": "text",
            "id": "second_subtitle",
            "label": "Second subtitle",
            "default": "Spectrum"
        },
        {
            "type": "richtext",
            "id": "spectrum",
            "label": "Spectrum content"
        },
        {
            "type": "text",
            "id": "third_subtitle",
            "label": "Third subtitle",
            "default": "Warranty"
        },
        {
            "type": "richtext",
            "id": "warranty",
            "label": "Warranty content"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "FDA image"
        }
    ],
    "presets": [
        {
            "name": "Product tehnical info",
            "category": "Product info"
        }
    ]
}
{% endschema %}

{% style %}
    .product-tehnical-info--{{section.id}} {
       margin-top: {{ section.settings.top_spacing}}px;
       margin-bottom: {{ section.settings.bottom_spacing}}px;
    }
{% endstyle %}