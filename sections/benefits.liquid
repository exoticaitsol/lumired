        "label":"Title"
      },
       {
        "type": "richtext",
        "id": "desc",
        "label":"Description"
      },
          {
        "type": "text",
        "id": "btn_title",
        "label":"Button Title"
      },
          {
        "type": "url",
        "id": "btn_url",
        "label":"Button URL"
      }
    ]
   }
  ]
  }
{% endschema %}

