
      <section class="fitness_recovery_sec">
        <ul class="fit_rec">

          {% for block in section.blocks %}
            {% if block.type == 'benefit_list' %}
          <li>
            <div class="ul_fitness_rec">
              <div class="row align-items-center">
                <div class="col-md-4">
                  <div class="recovery_img">
                    <img src="{{ block.settings.img | img_url: 'master' }}" alt="" />
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="fitness_sec_txt">
                    <div class="sec_li_txt">
                      <h2>{{ block.settings.title }}</h2>
                     {{ block.settings.desc }}

                      <div class="fit_us_btn">
                        <a href="{{ block.settings.btn_url }}" class="theme_btn">{{ block.settings.btn_title }}</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
            {% endif %}
            {% endfor %}

         
        </ul>
      </section>
