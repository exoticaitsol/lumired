<section class="journey_easy_sec py_9">
  <div class="container">
    <div class="journey_heading">
      <h2>{{ section.settings.main }}</h2>
    </div>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4 mb-4">
          <div class="journey_txt">
            <div class="journey_img">
              <img
                class="lazyload"
                src="{{ block.settings.img| img_url: 'original' }}"
                alt="{{ block.settings.img }}"
                width="{{ block.settings.img.width }}"
                height="{{ block.settings.img.height }}"
                loading="lazyimage"
              >
              {{ block.settings.description }}
            </div>
          </div>
        </div>
      {% endfor %}
