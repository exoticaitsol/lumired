<footer class="footer_sec">
  <div class="main_footer">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-12">
          <div class="company_bio">
            <div class="footer_logo">
              <a href="{{ section.settings.link_url }}">
                <img
                  class="lazyload"
                  src="{{ section.settings.footer_logo| img_url: 'original' }}"
                  alt="{{ section.settings.footer_logo }}"
                  width="{{ section.settings.footer_logo.width }}"
                  height="{{ section.settings.footer_logo.height }}"
                  loading="lazyimage"
                >
              </a>
            </div>
            {% if request.host contains 'lumired.ie' %}
              {{ section.settings.footer_description }}

            {% elsif request.host contains 'lumired.co.uk' %}
              {{ section.settings.uk_footer_description }}
            {% endif %}
          </div>
        </div>
        <div class="col-md-3 col-12">
          <div class="footer_link_list">
            <div class="footer_head">
              <h3>{{ section.settings.menu_title1 }}</h3>
            </div>
            <ul class="quick_links">
              {%- for link in section.settings.first_menu.links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="col-md-3 col-12">
          <div class="footer_link_list">
            <div class="footer_head">
              <h3>{{ section.settings.menu_title2 }}</h3>
            </div>
            <ul class="quick_links">
              {% if request.host contains 'lumired.ie' %}
                {% for link in section.settings.second_menu.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              {% elsif request.host contains 'lumired.co.uk' %}
                {% for link in section.settings.second_menu.links %}
                  <li>
                    {% if link.url == '/pages/delivery-returns' %}
                      <a href="/pages/uk-delivery-and-returns">{{ link.title }}</a>
                    {% else %}
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    {% endif %}
                  </li>
                {% endfor %}
              {% endif %}
            </ul>
          </div>
        </div>

        <div class="col-md-2 col-12">
          <div class="footer_link_list">
            <div class="footer_head">
              <h3>{{ section.settings.menu_title3 }}</h3>
            </div>
            {% if request.host contains 'lumired.ie' %}
              <div class="Follow_link">
                <ul class="quick_links">
                  {% for block in section.blocks %}
                    {% if block.type == 'get_in_touch' %}
                      <li>
                        {% if block.settings.link != blank %}
                          <a href=" {{ block.settings.link }} ">
                        {% endif -%}
                        {{- block.settings.detail }}
                        {% if block.settings.link != blank %}
                          </a>
                        {% endif %}
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
            {% if request.host contains 'lumired.co.uk' %}
              <div class="Follow_link">
                <ul class="quick_links">
                  {% for block in section.blocks %}
                    {% if block.type == 'uk_get_in_touch' %}
                      <li>
                        {% if block.settings.link != blank %}
                          <a href=" {{ block.settings.link }} ">
                        {% endif -%}
                        {{- block.settings.detail }}
                        {% if block.settings.link != blank %}
                          </a>
                        {% endif %}
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="copyright_bar">
    <div class="container">
      <div class="copy_text text-center">
        <p>
          Â© {{ 'now' | date: '%Y' }}
          {{ section.settings.copyright }}
        </p>
        <p class="copy1">{{ section.settings.copyright1 }}</p>
      </div>
    </div>
  </div>
</footer>

