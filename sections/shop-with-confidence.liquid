    <section class="shop_with_cofi">
      <div class="container">
        <div class="shop_with_cofi_head">
          <h2>{{ section.settings.heading }}</h2>
        </div>
        <div class="row">
          {% for block in section.blocks %}
          <div class="col-md-4 mb-4">
            <div class="shop_with_crd">
              <div class="shop_with_crd_img">
