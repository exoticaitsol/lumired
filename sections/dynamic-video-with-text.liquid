  {
  "name": "Description section",
  "settings": [
    {
      "type": "html",
      "id": "video",
      "label": "video-box"
    },
    {
      "type": "text",
      "id": "description_heading",
      "label": "description_heading"
    },
    {
      "type": "richtext",
      "id": "varient_description_1",
      "label": "Varient Description 1"
    },
    {
      "type": "richtext",
      "id": "varient_description_2",
      "label": "Varient Description 2"
    },
    {
      "type": "richtext",
      "id": "varient_description_3",
      "label": "Varient Description 3"
    }
  ],
  "presets": [
    {
      "name": "Description section"
    }
  ]
}  
{% endschema %}



